{{#leaflet-map center=center zoom=zoom}}
  {{!-- Specify child layer components here --}}
  {{tile-layer url="/static/fmi/{z}/{y}_{x}.png" minZoom="3" maxZoom="7" }}
  
  {{#each model as |p|}}
    {{#marker-layer lat=p.location.lat lng=p.location.lng draggable=true onDragend=(action "updateLocation" p)}} 
      <h3>{{p.id}} [{{p.device.type}}]</h3>
      
      <!-- {{gahu-lamp device=d.device}} -->
      <!-- {{rgb-slider}}      
      {{#paper-button}}Button{{/paper-button}} -->
      
      {{#each p.device.children as |c|}}
         {{device-renderer c=c}}
      {{/each}}
    {{/marker-layer}}
  {{/each}}
{{/leaflet-map}}

